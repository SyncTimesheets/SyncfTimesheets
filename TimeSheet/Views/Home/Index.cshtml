@{
    ViewBag.Title = "Login Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section TitleSection
{
    Time Sheet-Login Page
}

@section StyleSection
{
<style>
    .btn-section {
        padding-left: 41.5%;
    }

    .e-grid .e-alt_row {
        background-color: #ffffff;
    }
    #loginform{
        padding-left: 93px;
            padding-top: 20px;
    }

    #login {
        width: 70px;
        float: right;
        margin-top: -39px;
        margin-right: 83px;
        margin-bottom: 20px;
    }
    .container{
            padding-top: 10px;
    }
    .title{
        margin-bottom: 18px;
   }
    .btn-success {
    background-color: #5bc0de!important;
            border-color: #46b8da!important;
            color: #fff;
}

</style>
}

@section ScriptSection
{
@Scripts.Render("~/bundle/FilterPage");
    
}
@section MainSection
{
<div class="container">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="title">
            <h3 style="text-align: center;">
                Time Sheet
            </h3>
        </div>
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Sign In</div>
            </div>
            <div style="padding-top:30px" class="panel-body">
                <div style="display:none" id="loginError" class="alert alert-danger col-sm-12"></div>

                <form id="loginform" class="form-horizontal" role="form">

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input id="userID" type="text" class="form-control" name="username" value="" placeholder="User Name">
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input id="userPassword" type="password" class="form-control" name="password" placeholder="Password">
                    </div>

                    <div class="input-group">
                        <div class="checkbox">
                            <label>
                                <input id="login-remember" type="checkbox" name="remember" value="1">Remember me
                            </label>
                        </div>
                    </div>

                    <div style="margin-top:10px" aclass="form-group">
                        <!-- Button -->
                        <div class="col-sm-12 controls">
                            <a id="login" class="btn btn-success">Login</a>
                        </div>                        
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="loadingmodal" class="modal fade modal-sm" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4>Loading...</h4>
                <div class="progress">
                    <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:80%">
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

}

    